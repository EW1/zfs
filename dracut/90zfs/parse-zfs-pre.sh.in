#!/bin/sh

. /lib/dracut-lib.sh

# Ignore zpool.cache if requested on boot
if getargbool 0 zfs_bypass_cache= ; then
	info "ZFS: bypassing zpool.cache prior to loading the zfs module"
	mv /etc/zfs/zpool.cache /etc/zfs/zpool.cache.bypassed
	modprobe zfs
	mv /etc/zfs/zpool.cache.bypassed /etc/zfs/zpool.cache
fi
